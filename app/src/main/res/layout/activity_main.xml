<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Bill"
            android:layout_width="28dp"
            android:layout_height="17dp"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="44dp" android:textColor="#FA141414"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:hint="35.70"
            android:gravity="center_horizontal" android:id="@+id/BilleditText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/tipedittext"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:gravity="center_horizontal" android:hint="10"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/tippercentageEdittext"/>
    <Button
            android:text="Calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calculatetextview" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tipedittext" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.501" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Tip:100$ total:500$"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/importantInfo" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/calculatetextview" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold" android:textColor="#131212" android:textSize="24sp"/>
    <TextView
            android:text="Tip percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tippercentageEdittext" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/BilleditText" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#F0131212"/>
</androidx.constraintlayout.widget.ConstraintLayout>